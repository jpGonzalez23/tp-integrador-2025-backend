<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

    <hr>
        <h1><%= title %></h1>
    <hr>

    <main id="contenedor-get">
        <div id="productos-container">
            <ul id="productos-lista">
  
                <% productos.forEach(prod => {  %>
  
                    <li class="li-listados productos-listados">
                        <img src=" <%= prod.img %> " alt=" <%= prod.nombre %> " class="img-listados">
                        <ul>
                            <h2><%= prod.nombre %></h2>
                            <p><strong>Descripcion: </strong><%= prod.descripcion %></p>
                            <p><strong>Categoria: </strong><%= prod.categoria %></p>
                            <p><strong>Precio: </strong>$<%= prod.precio %></p>
                            <p><strong>Estado: </strong><%= prod.id_estado === 1 ? "activo" : "Inactivo" %></p>
                        </ul>
                    </li> 
    
                <% }) %>
            </ul>
        </div>
        </section>
    </main>

