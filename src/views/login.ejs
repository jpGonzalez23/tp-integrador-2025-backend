<%- include("partials/head.ejs") %>


    <hr>
        <h1><%= title %></h1>
        <p><%= about %></p>
    <hr>
    <main class="login-container">
        <form id="login-form" autocomplete="off">
            <label for="email">Correo electrónico:</label>
            <input type="email" name="email" id="email" required>

            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" required>

            <button type="submit">Ingresar</button>
        </form>
        <% if (typeof error !== 'undefined') { %>
            <p class="error"><%= error %></p>
        <% } %>
    </main>

    <script>
        const url = "http://localhost:3000/api";

        let loginUser_from = document.getElementById("login-form");

        loginUser_from.addEventListener("submit", async(event) => {
            event.preventDefault();

            let formData = new FormData(event.target); // Obtenemos la data del formulario
            let data = Object.fromEntries(formData.entries()); // Convertimos a objeto JS nuestro objeto

            console.log(data);
            
            if (!data.email || !data.password) {
                alert("Todos los campos son obligatorios!");
                return;
            }

            try {
                let response = await fetch(`${url}/login`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    console.log("response: ", response);

                    let result = await response.json();
                    console.log("result: ", result);
                    // alert(result.message);
                    window.location.href = "/dashboard"; // Redirige al dashboard si el login es exitoso
                }
                else {
                    let error = await response.json();
                    console.log("Error: ", error);
                }
            } catch (error) {
                console.log("Error al enviar los datos: ", error);
                alert("Error al enviar la solicitud");
            }
        });
    </script>


